<main class="container my-5">
  <div class="bg-white p-4">
    <h2 class="text-center mb-4">Criar Memorial</h2>

    <form
      action="/criar-memorial"
      method="POST"
      class="mx-auto"
      style="max-width: 80%;"
    >
      <!-- Nome e Sobrenome -->
      <div class="mb-3">
        <label for="nome" class="form-label">Nome:</label>
        <input
          type="text"
          class="form-control"
          id="nome"
          name="nome"
          required
        />
      </div>

      <div class="mb-3">
        <label for="sobrenome" class="form-label">Sobrenome:</label>
        <input
          type="text"
          class="form-control"
          id="sobrenome"
          name="sobrenome"
          required
        />
      </div>

      <!-- Sexo -->
      <div class="mb-3">
        <label for="sexo" class="form-label">Sexo:</label>
        <select class="form-control" id="sexo" name="sexo" required>
          <option value="">Selecione</option>
          <option value="masculino">Masculino</option>
          <option value="feminino">Feminino</option>
          <option value="outro">Outro</option>
        </select>
      </div>

      <!-- Parentesco -->
      <div class="mb-3">
        <label for="parentesco" class="form-label">Parentesco:</label>
        <input
          type="text"
          class="form-control"
          id="parentesco"
          name="parentesco"
          required
        />
      </div>

      <!-- Data e Local de Nascimento -->
      <h4 class="mt-4">Nascimento</h4>
      <div class="mb-3">
        <label for="dataNascimento" class="form-label">Data:</label>
        <input
          type="date"
          class="form-control"
          id="dataNascimento"
          name="nascimento[data]"
          required
        />
      </div>

      <div class="mb-3">
        <label for="cidadeNascimento" class="form-label">Cidade:</label>
        <input
          type="text"
          class="form-control"
          id="cidadeNascimento"
          name="nascimento[cidade]"
          required
        />
      </div>

      <div class="mb-3">
        <label for="estadoNascimento" class="form-label">Estado:</label>
        <input
          type="text"
          class="form-control"
          id="estadoNascimento"
          name="nascimento[estado]"
          required
        />
      </div>

      <div class="mb-3">
        <label for="paisNascimento" class="form-label">País:</label>
        <input
          type="text"
          class="form-control"
          id="paisNascimento"
          name="nascimento[pais]"
          required
        />
      </div>

      <!-- Data e Local de Falecimento -->
      <h4 class="mt-4">Falecimento</h4>
      <div class="mb-3">
        <label for="dataFalecimento" class="form-label">Data:</label>
        <input
          type="date"
          class="form-control"
          id="dataFalecimento"
          name="falecimento[data]"
          required
        />
      </div>

      <div class="mb-3">
        <label for="cidadeFalecimento" class="form-label">Cidade:</label>
        <input
          type="text"
          class="form-control"
          id="cidadeFalecimento"
          name="falecimento[cidade]"
          required
        />
      </div>

      <div class="mb-3">
        <label for="estadoFalecimento" class="form-label">Estado:</label>
        <input
          type="text"
          class="form-control"
          id="estadoFalecimento"
          name="falecimento[estado]"
          required
        />
      </div>

      <div class="mb-3">
        <label for="paisFalecimento" class="form-label">País:</label>
        <input
          type="text"
          class="form-control"
          id="paisFalecimento"
          name="falecimento[pais]"
          required
        />
      </div>

      <!-- Sobre (Epitáfio) -->
      <div class="mb-3">
        <label for="sobre" class="form-label">Sobre (Epitáfio):</label>
        <textarea
          class="form-control"
          id="sobre"
          name="sobre"
          rows="3"
          required
        ></textarea>
      </div>

      <!-- Tributo -->
      <div class="mb-3">
        <label for="tributo" class="form-label">Tributo (Mensagens de
          visitantes):</label>
        <textarea
          class="form-control"
          id="tributo"
          name="tributo"
          rows="3"
        ></textarea>
      </div>

      <!-- História de Vida -->
      <div class="mb-3">
        <label for="lifestory" class="form-label">História de Vida:</label>
        <textarea
          class="form-control"
          id="lifestory"
          name="lifestory"
          rows="3"
        ></textarea>
      </div>

      <!-- Histórias e Casos -->
      <div class="mb-3">
        <label for="stories" class="form-label">Histórias e Casos:</label>
        <textarea
          class="form-control"
          id="stories"
          name="stories"
          rows="3"
        ></textarea>
      </div>

      <!-- Escolha de Tema -->
      <div class="mb-3">
        <label for="tema" class="form-label">Escolha um tema:</label>
        <select class="form-control" id="tema" name="tema">
          <option value="padrão">Padrão</option>
          <option value="tema-azul">Tema Azul</option>
          <option value="tema-verde">Tema Verde</option>
          <option value="tema-rosa">Tema Rosa</option>
        </select>
      </div>

      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Criar Memorial</button>
      </div>
    </form>
  </div>
</main>