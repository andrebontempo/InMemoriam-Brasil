<main class="container my-5">
  <section class="row justify-content-center">
    <div class="col-md-8">
      <div class="card p-4">
        <h2 class="card-title text-center mb-4">Entrar</h2>
        <div class="row">
          <!-- Lado Esquerdo - Redes Sociais -->
          <div class="col-md-6 border-end">
            <h4 class="text-center">Acesso pelas Redes Sociais</h4>
            <p class="text-center">Escolha dentre as opções abaixo:</p>
            <div class="d-flex flex-column align-items-center">
              <button class="btn btn-danger w-75 mb-2">Entrar com Google</button>
              <button
                class="btn btn-primary w-75"
                style="background-color: #1877f2; border-color: #1877f2;"
              >Entrar com Facebook</button>
            </div>
          </div>

          <!-- Lado Direito - Email -->
          <div class="col-md-6">
            <h4 class="text-center">Com o seu email</h4>
            <p class="text-center">Nesta opção:</p>
            <form>
              <div class="mb-3">
                <input type="email" class="form-control" placeholder="Email" />
              </div>
              <div class="mb-3 form-check">
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="firstTimeCheck"
                />
                <label class="form-check-label" for="firstTimeCheck">Estou
                  acessando pela primeira vez</label>
              </div>
              <button
                type="submit"
                class="btn btn-primary w-100"
              >Continuar</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>