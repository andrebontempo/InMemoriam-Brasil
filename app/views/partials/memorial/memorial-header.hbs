<header class="bs-primary text-white pb-0">
  <div class="container pb-2">
    <div class="d-flex justify-content-between align-items-center">
      <!-- Logo à esquerda -->
      <a href="/">
        <img
          src="/images/logo.svg"
          alt="Logo In Memoriam Brasil"
          style="height: 60px;"
        />
      </a>

      <!-- Barra de pesquisa centralizada -->
      <form
        action="/memorial/pesquisa"
        method="GET"
        class="d-flex flex-grow-1 justify-content-center"
      >
        <div class="input-group w-50">
          <input
            type="text"
            name="q"
            class="form-control"
            placeholder="Pesquisar por Memorial..."
            aria-label="Pesquisar por Memorial"
          />
          <button class="btn btn-light" type="submit">
            <i class="bi bi-search"></i>
          </button>
        </div>
      </form>

      <!-- Links de autenticação à direita -->
      <div class="d-flex gap-3">
        {{#if user}}
          <div class="dropdown">
            <a
              class="btn btn-link text-white dropdown-toggle fs-6"
              href="#"
              id="dropdownMenuButton"
              data-bs-toggle="dropdown"
              aria-expanded="false"
              style="text-decoration: none;"
            >
              Bem-vindo(a),
              {{user.firstName}}
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <li><a class="dropdown-item" href="/auth/dashboard">A Minha Conta</a></li>
              <li><a class="dropdown-item" href="/auth/logout">Sair</a></li>
            </ul>
          </div>
        {{else}}
          <a href="/auth/register" class="text-white text-decoration-none fs-6">
            <i class="bi bi-person-plus text-white"></i>
            Criar uma conta
          </a>
          <a
            href="/auth/login"
            class="text-white text-decoration-none fw-bold fs-6"
          >
            <i class="bi bi-box-arrow-in-right text-white"></i>
            Entre
          </a>
        {{/if}}
      </div>
    </div>
  </div>

  <!-- Seção com imagem de fundo e detalhes do memorial -->
  <div
    style="
      width: 100%;
      height: 350px;
      background-image: url('/images/pescaria.png');
      background-size: cover;
      background-position: center;
      position: relative;
    "
  >
    <div class="container h-100">
      <div class="row h-100 align-items-center">
        <!-- Foto do memorial à esquerda -->
        <div class="col-md-3 d-flex justify-content-center">
          <img
            src="/images/uploads/pateta0.jpg"
            alt="Imagem do Memorial"
            class="img-fluid rounded"
            style="max-width: 250px; height: 250px; object-fit: cover; border: 5px solid #4f0e21;"
          />
        </div>

        <!-- Conteúdo ao lado da foto com sombra no texto -->
        <div
          class="col-md-9 d-flex flex-column justify-content-center text-white text-start gap-3"
        >
          <h1 style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);"><strong
            >{{firstName}} {{lastName}}</strong></h1>
          <h4 style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">{{formatDate
              birth.date
              "year"
            }}
            -
            {{formatDate death.date "year"}}</h4>
        </div>
      </div>
    </div>

  </div>
</header>