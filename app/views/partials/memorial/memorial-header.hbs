<header class="bs-primary text-white pb-0">
  <div class="container pb-2">
    <div class="d-flex justify-content-between align-items-center">

      <!-- Logo à esquerda -->
      <a href="/">
        <img
          src="/images/logo.svg"
          alt="Logo In Memoriam Brasil"
          style="height: 60px;"
        />
      </a>

      <!-- Barra de pesquisa centralizada -->
      <form
        action="/memorial/pesquisa"
        method="GET"
        class="d-flex flex-grow-1 justify-content-center"
      >
        <div class="input-group w-50">
          <input
            type="text"
            name="q"
            class="form-control"
            placeholder="Pesquisar por Memorial..."
            aria-label="Pesquisar por Memorial"
          />
          <button class="btn btn-light" type="submit">
            <i class="bi bi-search"></i>
          </button>
        </div>
      </form>

      <!-- Links de autenticação à direita -->
      <div class="d-flex gap-3">
        <!-- Verificar se o usuário está logado na sessão -->
        {{#if user}}
          <!-- Se estiver logado, exibe o nome do usuário com o dropdown -->
          <div class="dropdown">
            <a
              class="btn btn-link text-white dropdown-toggle fs-6"
              href="#"
              id="dropdownMenuButton"
              data-bs-toggle="dropdown"
              aria-expanded="false"
              style="text-decoration: none;"
            >
              <!-- Adicionando estilo para remover o sublinhado -->
              Bem-vindo(a),
              {{user.firstName}}
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <li><a class="dropdown-item" href="/auth/dashboard">A Minha Conta</a></li>
              <li><a class="dropdown-item" href="/auth/logout">Sair</a></li>
            </ul>
          </div>
        {{else}}
          <!-- Se não estiver logado, exibe os links para login e registro -->
          <a href="/auth/register" class="text-white text-decoration-none fs-6">
            <i class="bi bi-person-plus text-white"></i>
            Criar uma conta
          </a>
          <a
            href="/auth/login"
            class="text-white text-decoration-none fw-bold fs-6"
          >
            <i class="bi bi-box-arrow-in-right text-white"></i>
            Entre
          </a>
        {{/if}}
      </div>

    </div>
  </div>
  <!-- Div com a imagem de fundo e texto sobreposto -->
  <div
    style="
            width: 100%;
            height: 350px;
            background-image: url('/images/pescaria.png');
            background-size: cover;
            background-position: center;
            position: relative;
        "
  >
    <!-- Conteúdo sobreposto à imagem -->
    <div
      class="d-flex justify-content-center align-items-center h-100 text-center text-white"
      style="position: absolute; top: 0; left: 0; right: 0; bottom: 0;"
    >
      <div>
        <h1><strong>{{firstName}} {{lastName}}</strong></h1>
        <h4>{{birth.date}}<br />{{death.date}}.</h4>
      </div>
    </div>
  </div>

</header>