<header class="bs-primary text-white py-3">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">

      <!-- Logo à esquerda -->
      <a href="/">
        <img
          src="/images/logo.svg"
          alt="Logo In Memoriam Brasil"
          style="height: 60px;"
        />
      </a>

      <!-- Barra de pesquisa centralizada -->
      <form
        action="/pesquisa"
        method="GET"
        class="d-flex flex-grow-1 justify-content-center"
      >
        <div class="input-group w-50">
          <input
            type="text"
            name="q"
            class="form-control"
            placeholder="Pesquisar por Memorial..."
            aria-label="Pesquisar por Memorial"
          />
          <button class="btn btn-light" type="submit">
            <i class="bi bi-search"></i>
            <!-- Ícone de lupa -->
          </button>
        </div>
      </form>

      <!-- Login à direita -->
      <a href="/login" class="btn btn-light">Inicie a Sessão</a>

    </div>
  </div>
</header>