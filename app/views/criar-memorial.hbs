<main class="container my-5">
  <div class="p-5 rounded-4 shadow-lg text-white bg-primary">
    <h2 class="text-center mb-4 fw-bold">Criar Memorial</h2>

    <!-- enctype="multipart/form-data" -->
    <form
      action="/criar-memorial"
      method="POST"
      class="mx-auto"
      style="max-width: 80%;"
    >
      <!-- Nome e Sobrenome (Obrigatórios) -->
      <div class="mb-3">
        <label for="firstName" class="form-label">Primeiro Nome:</label>
        <input
          type="text"
          class="form-control"
          id="firstName"
          name="firstName"
          required
        />
      </div>

      <div class="mb-3">
        <label for="lastName" class="form-label">Sobrenome:</label>
        <input
          type="text"
          class="form-control"
          id="lastName"
          name="lastName"
          required
        />
      </div>

      <!-- Sexo -->
      <div class="mb-3">
        <label for="gender" class="form-label">Sexo:</label>
        <select class="form-control" id="gender" name="gender">
          <option value="">Selecione</option>
          <option value="male">Masculino</option>
          <option value="female">Feminino</option>
          <option value="other">Outro</option>
        </select>
      </div>

      <!-- Parentesco -->
      <div class="mb-3">
        <label for="relationship" class="form-label">Parentesco:</label>
        <input
          type="text"
          class="form-control"
          id="relationship"
          name="relationship"
        />
      </div>

      <!-- Nascimento -->
      <h4 class="mt-4 fw-bold">Nascimento</h4>
      <div class="mb-3">
        <label for="birthDate" class="form-label">Data:</label>
        <input
          type="date"
          class="form-control"
          id="birthDate"
          name="birth.date"
        />
      </div>

      <div class="mb-3">
        <label for="birthCity" class="form-label">Cidade:</label>
        <input
          type="text"
          class="form-control"
          id="birthCity"
          name="birth.city"
        />
      </div>

      <div class="mb-3">
        <label for="birthState" class="form-label">Estado:</label>
        <input
          type="text"
          class="form-control"
          id="birthState"
          name="birth.state"
        />
      </div>

      <div class="mb-3">
        <label for="birthCountry" class="form-label">País:</label>
        <input
          type="text"
          class="form-control"
          id="birthCountry"
          name="birth.country"
        />
      </div>

      <!-- Falecimento -->
      <h4 class="mt-4 fw-bold">Falecimento</h4>
      <div class="mb-3">
        <label for="deathDate" class="form-label">Data:</label>
        <input
          type="date"
          class="form-control"
          id="deathDate"
          name="death.date"
        />
      </div>

      <div class="mb-3">
        <label for="deathCity" class="form-label">Cidade:</label>
        <input
          type="text"
          class="form-control"
          id="deathCity"
          name="death.city"
        />
      </div>

      <div class="mb-3">
        <label for="deathState" class="form-label">Estado:</label>
        <input
          type="text"
          class="form-control"
          id="deathState"
          name="death.state"
        />
      </div>

      <div class="mb-3">
        <label for="deathCountry" class="form-label">País:</label>
        <input
          type="text"
          class="form-control"
          id="deathCountry"
          name="death.country"
        />
      </div>

      <!-- Epitáfio -->
      <div class="mb-3">
        <label for="epitaph" class="form-label">Epitáfio:</label>
        <textarea
          class="form-control"
          id="epitaph"
          name="epitaph"
          rows="2"
          maxlength="255"
        ></textarea>
      </div>

      <!-- Galeria -->
      <h4 class="mt-4 fw-bold">Galeria</h4>
      <div class="mb-3">
        <label for="galleryPhotos" class="form-label">Fotos:</label>
        <input
          type="file"
          class="form-control"
          id="galleryPhotos"
          name="gallery.photos"
          multiple
          accept="image/*"
        />
      </div>

      <div class="mb-3">
        <label for="galleryAudios" class="form-label">Áudios:</label>
        <input
          type="file"
          class="form-control"
          id="galleryAudios"
          name="gallery.audios"
          multiple
          accept="audio/*"
        />
      </div>

      <div class="mb-3">
        <label for="galleryVideos" class="form-label">Vídeos:</label>
        <input
          type="file"
          class="form-control"
          id="galleryVideos"
          name="gallery.videos"
          multiple
          accept="video/*"
        />
      </div>

      <!-- Escolha de Tema -->
      <div class="mb-3">
        <label for="theme" class="form-label">Escolha um tema:</label>
        <select class="form-control" id="theme" name="theme">
          <option value="blue-theme">Tema Azul</option>
          <option value="green-theme">Tema Verde</option>
          <option value="pink-theme">Tema Rosa</option>
        </select>
      </div>

      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-light">Criar Memorial</button>
      </div>
    </form>
  </div>
</main>