<main class="container my-5">
  <div
    class="p-5 rounded-4 shadow-lg text-white"
    style="background-color: #4f0e21;"
  >
    <h2 class="text-center mb-4 fw-bold">Criar Memorial</h2>

    <form
      action="/memorial/create-memorial"
      method="POST"
      class="mx-auto"
      style="max-width: 80%;"
    >

      <!-- Dados Pessoais -->
      <h3 class="mt-4 fw-bold">Dados do Homenageado</h3>
      <div
        class="border rounded p-4 mb-4"
        style="background-color: #7a142f; color: white;"
      >

        <!-- Nome e Sobrenome -->
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="firstName" class="form-label">Primeiro Nome:</label>
            <input
              type="text"
              class="form-control"
              id="firstName"
              name="firstName"
              value="{{formData.firstName}}"
              required
            />
          </div>
          <div class="col-md-6">
            <label for="lastName" class="form-label">Sobrenome:</label>
            <input
              type="text"
              class="form-control"
              id="lastName"
              name="lastName"
              value="{{formData.lastName}}"
              required
            />
          </div>
        </div>

        <!-- Sexo e Parentesco -->
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Sexo:</label>
            <div>
              <input
                type="radio"
                id="male"
                name="gender"
                value="male"
                {{#if (eq formData.gender "male")}}checked{{/if}}
                required
              />
              <label for="male">Masculino</label>
              <input
                type="radio"
                id="female"
                name="gender"
                value="female"
                {{#if (eq formData.gender "female")}}checked{{/if}}
                required
                class="ms-3"
              />
              <label for="female">Feminino</label>
              <input
                type="radio"
                id="other"
                name="gender"
                value="other"
                {{#if (eq formData.gender "other")}}checked{{/if}}
                required
                class="ms-3"
              />
              <label for="other">Outros</label>
            </div>
          </div>
          <div class="col-md-6">
            <label for="relationship" class="form-label">Parentesco:</label>
            <select
              class="form-control"
              id="relationship"
              name="relationship"
              required
            >
              <option value="">Selecione</option>
              <option value="amigo" {{#if (eq formData.relationship "amigo")}}selected{{/if}}>Amigo</option>
              <option value="amiga" {{#if (eq formData.relationship "amiga")}}selected{{/if}}>Amiga</option>
              <option value="avo" {{#if (eq formData.relationship "avo")}}selected{{/if}}>Avô</option>
              <option value="filho" {{#if (eq formData.relationship "filho")}}selected{{/if}}>Filho</option>
              <option value="filha" {{#if (eq formData.relationship "filha")}}selected{{/if}}>Filha</option>
            </select>
          </div>
        </div>

        <!-- Nascimento -->
        <h4 class="mt-4 fw-bold">Nascimento</h4>
        <div class="row mb-3">
          <div class="col-md-3">
            <label for="birthDate" class="form-label">Data:</label>
            <input
              type="date"
              class="form-control"
              id="birthDate"
              name="birth.date"
              value="{{formData.birth.date}}"
              required
            />
          </div>
        </div>

        <!-- Falecimento -->
        <h4 class="mt-4 fw-bold">Falecimento</h4>
        <div class="row mb-3">
          <div class="col-md-3">
            <label for="deathDate" class="form-label">Data:</label>
            <input
              type="date"
              class="form-control"
              id="deathDate"
              name="death.date"
              value="{{formData.death.date}}"
              required
            />
          </div>
        </div>
      </div>

      <!-- Dados do Memorial -->
      <h3 class="mt-4 fw-bold">Dados do Memorial</h3>
      <div
        class="border rounded p-4 mb-4"
        style="background-color: #7a142f; color: white;"
      >
        <!-- Epitáfio -->
        <div class="mb-3">
          <label for="epitaph" class="form-label">Epitáfio:</label>
          <textarea
            class="form-control"
            id="epitaph"
            name="epitaph"
            rows="2"
            maxlength="255"
          >{{formData.epitaph}}</textarea>
        </div>
      </div>

      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-light">Criar Memorial</button>
      </div>
    </form>

  </div>
</main>