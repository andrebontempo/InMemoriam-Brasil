<main class="container my-0">
  <div class="custom-container my-0 p-2">
    <div class="row">
      <!-- Coluna Principal (3/4) -->
      <div class="col-md-9">
        
        <!-- Seção de Life Story em uma caixa separada -->
        <div class="custom-box p-4 mt-4">
          <div class="container mt-5">
              <h3>Tabs</h3>

              <!-- Navbar de Tabs -->
              <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                  <a class="nav-link active" id="home-tab" data-bs-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Fotos</a>
                </li>
                <li class="nav-item" role="presentation">
                  <a class="nav-link" id="menu1-tab" data-bs-toggle="tab" href="#menu1" role="tab" aria-controls="menu1" aria-selected="false">Audios</a>
                </li>
                <li class="nav-item" role="presentation">
                  <a class="nav-link" id="menu2-tab" data-bs-toggle="tab" href="#menu2" role="tab" aria-controls="menu2" aria-selected="false">Vídeos</a>
                </li>
                </ul>

              <!-- Conteúdo das Tabs -->
              <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                  <h5>Conteúdo da Aba Fotos</h5>
                  <p>Este é o conteúdo da aba fotos.</p>
                </div>
                <div class="tab-pane fade" id="menu1" role="tabpanel" aria-labelledby="menu1-tab">
                  <h5>Conteúdo da Aba Áudio</h5>
                  <p>Este é o conteúdo da aba Áudio.</p>
                </div>
                <div class="tab-pane fade" id="menu2" role="tabpanel" aria-labelledby="menu2-tab">
                  <h5>Conteúdo da Aba Vídeo</h5>
                  <p>Este é o conteúdo da aba Vídeo.</p>
                </div>
              </div>
            </div>

          
          <p>
            {{#if lifeStory}}
              {{lifeStory.title}}
              {{lifeStory.title}}
            {{else}}
              Nenhuma biografia disponível.
            {{/if}}
          </p>
        </div>
      </div>

      <!-- Coluna Lateral (1/4) -->
      <div class="col-md-3">
        <div class="custom-box p-3">
          <h4>Informações Gerais</h4>
          <ul class="list-unstyled">
            <li><strong>Gênero:</strong> {{#if gender}}{{gender}}{{else}}Não informado{{/if}}</li>
            <li><strong>Relacionamento:</strong> {{#if relationship}}{{relationship}}{{else}}Não informado{{/if}}</li>
          </ul>
        </div>

        <div class="custom-box p-3 mt-3">
          <h4>Estatísticas</h4>
          <p><strong>Visitas:</strong> 1234</p> <!-- Pode ser dinâmico no futuro -->
          <p><strong>Tributos:</strong> {{tribute.length}}</p>
        </div>

        <div class="custom-box p-3 mt-3">
          <h4>Galeria</h4>
          {{#if gallery.photos.length}}
            {{#each gallery.photos}}
              <img src="{{this}}" class="img-fluid rounded mb-2" alt="Foto de {{../firstName}}">
            {{/each}}
          {{else}}
            <p>Nenhuma foto disponível.</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</main>
