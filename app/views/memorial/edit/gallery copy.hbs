<main class="container my-0">
  <div class="custom-container my-0 p-2">
    <div class="row">

      <!-- Coluna Principal -->
      <div class="col-md-9">
        <div class="custom-box p-4 my-2 mx-4">
          <h3><i class="bi bi-pencil-square me-2"></i>Editar Galeria de Fotos, Áudios e Vídeos</h3>

          <!-- Tabs -->
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a class="nav-link active" id="tab-fotos" data-bs-toggle="tab" href="#fotos" role="tab">Fotos</a>
            </li>
            <li class="nav-item" role="presentation">
              <a class="nav-link" id="tab-audios" data-bs-toggle="tab" href="#audios" role="tab">Áudios</a>
            </li>
            <li class="nav-item" role="presentation">
              <a class="nav-link" id="tab-videos" data-bs-toggle="tab" href="#videos" role="tab">Vídeos</a>
            </li>
          </ul>

          <div class="tab-content mt-3" id="myTabContent">

            <!-- Fotos -->
            <div class="tab-pane fade show active" id="fotos" role="tabpanel">
              <form action="/memorials/{{slug}}/gallery/upload/photo" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="photoUpload" class="form-label">Adicionar novas fotos</label>
                  <input type="file" name="photos" id="photoUpload" class="form-control" accept="image/*" multiple />
                </div>
                <button type="submit" class="btn btn-primary mb-3">Enviar</button>
              </form>

              <div class="row gallery-grid">
                {{#if gallery.photos.length}}
                  {{#each gallery.photos}}
                    <div class="col-sm-6 col-md-4 col-lg-3 mb-4 position-relative">
                      <a href="/memorials/{{../slug}}/photos/{{this}}" target="_blank">
                        <img
                          src="/memorials/{{../slug}}/photos/{{this}}"
                          class="galeria-foto"
                          alt="Foto do memorial {{../slug}}"
                        />
                      </a>
                      <form action="/memorials/{{../slug}}/gallery/delete/photo" method="POST" class="delete-form">
                        <input type="hidden" name="fileName" value="{{this}}" />
                        <button type="submit" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1">
                          <i class="bi bi-trash-fill"></i>
                        </button>
                      </form>
                    </div>
                  {{/each}}
                {{else}}
                  <p>Nenhuma foto disponível.</p>
                {{/if}}
              </div>
            </div>

            <!-- Áudios -->
            <div class="tab-pane fade" id="audios" role="tabpanel">
              <form action="/memorials/{{slug}}/gallery/upload/audio" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="audioUpload" class="form-label">Adicionar novos áudios</label>
                  <input type="file" name="audios" id="audioUpload" class="form-control" accept="audio/*" multiple />
                </div>
                <button type="submit" class="btn btn-primary mb-3">Enviar</button>
              </form>

              <div class="row">
                {{#if gallery.audios.length}}
                  {{#each gallery.audios}}
                    <div class="col-md-6 mb-3 position-relative">
                      <audio controls class="media-player w-100 mb-2">
                        <source src="/uploads/{{this}}" type="audio/mpeg" />
                      </audio>
                      <form action="/memorials/{{../slug}}/gallery/delete/audio" method="POST" class="delete-form">
                        <input type="hidden" name="fileName" value="{{this}}" />
                        <button type="submit" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1">
                          <i class="bi bi-trash-fill"></i>
                        </button>
                      </form>
                    </div>
                  {{/each}}
                {{else}}
                  <p>Nenhum áudio disponível.</p>
                {{/if}}
              </div>
            </div>

            <!-- Vídeos -->
            <div class="tab-pane fade" id="videos" role="tabpanel">
              <form action="/memorials/{{slug}}/gallery/upload/video" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="videoUpload" class="form-label">Adicionar novos vídeos</label>
                  <input type="file" name="videos" id="videoUpload" class="form-control" accept="video/*" multiple />
                </div>
                <button type="submit" class="btn btn-primary mb-3">Enviar</button>
              </form>

              <div class="row">
                {{#if gallery.videos.length}}
                  {{#each gallery.videos}}
                    <div class="col-md-6 mb-4 position-relative">
                      <video controls class="media-player w-100 rounded shadow-sm mb-2">
                        <source src="/uploads/{{this}}" type="video/mp4" />
                      </video>
                      <form action="/memorials/{{../slug}}/gallery/delete/video" method="POST" class="delete-form">
                        <input type="hidden" name="fileName" value="{{this}}" />
                        <button type="submit" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1">
                          <i class="bi bi-trash-fill"></i>
                        </button>
                      </form>
                    </div>
                  {{/each}}
                {{else}}
                  <p>Nenhum vídeo disponível.</p>
                {{/if}}
              </div>
            </div>

          </div>
        </div>
      </div>

      <!-- Coluna Lateral -->
      <div class="col-md-3">
        <div class="custom-box-sidebar">
          <h4><i class="bi bi-info-circle-fill"></i> Instruções</h4>
          <ul class="list-unstyled small">
            <li>Adicione arquivos nos formatos aceitos.</li>
            <li>Use o botão de lixeira para remover.</li>
            <li>Atualize a página após envios múltiplos.</li>
          </ul>
        </div>

        <div class="custom-box-sidebar my-2 mx-2">
          <h4><i class="bi bi-bar-chart-fill"></i> Estatísticas</h4>
          <p><strong>Visitas:</strong> 1234</p>
          <p><strong>Tributos:</strong> {{tribute.length}}</p>
        </div>
      </div>

    </div>
  </div>
</main>
