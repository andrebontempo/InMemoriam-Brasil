<main class="container my-5">
  <div class="p-5 rounded-4 shadow-lg text-white bg-primary">
    <h2 class="text-center mb-4 fw-bold">Criar Memorial</h2>

    <form
      action="/criar-memorial"
      method="POST"
      class="mx-auto"
      style="max-width: 80%;"
    >

      <!-- Dados Pessoais -->
      <h3 class="mt-4 fw-bold">Dados Pessoais</h3>
      <div class="border rounded p-4 mb-4 bg-light text-dark">
        <!-- Nome e Sobrenome -->
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="firstName" class="form-label">Primeiro Nome:</label>
            <input
              type="text"
              class="form-control"
              id="firstName"
              name="firstName"
              required
            />
          </div>
          <div class="col-md-6">
            <label for="lastName" class="form-label">Sobrenome:</label>
            <input
              type="text"
              class="form-control"
              id="lastName"
              name="lastName"
              required
            />
          </div>
        </div>

        <!-- Sexo e Parentesco -->
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Sexo:</label>
            <div>
              <input
                type="radio"
                id="male"
                name="gender"
                value="male"
                required
              />
              <label for="male">Masculino</label>
              <input
                type="radio"
                id="female"
                name="gender"
                value="female"
                required
                class="ms-3"
              />
              <label for="female">Feminino</label>
              <input
                type="radio"
                id="other"
                name="gender"
                value="other"
                required
                class="ms-3"
              />
              <label for="other">Outros</label>
            </div>
          </div>
          <div class="col-md-6">
            <label for="relationship" class="form-label">Parentesco:</label>
            <select
              class="form-control"
              id="relationship"
              name="relationship"
              required
            >
              <option value="">Selecione</option>
              <option value="amigo">Amigo</option>
              <option value="amiga">Amiga</option>
              <option value="avo">Avô</option>
              <option value="avo">Avó</option>
              <option value="filho">Filho</option>
              <option value="filha">Filha</option>
              <option value="irmao">Irmão</option>
              <option value="irma">Irmã</option>
              <option value="mae">Mãe</option>
              <option value="marido">Marido</option>
              <option value="neto">Neto</option>
              <option value="neta">Neta</option>
              <option value="pai">Pai</option>
              <option value="primo">Primo</option>
              <option value="prima">Prima</option>
              <option value="sobrinho">Sobrinho</option>
              <option value="sobrinha">Sobrinha</option>
              <option value="tia">Tia</option>
              <option value="tio">Tio</option>
              <option value="esposa">Esposa</option>
            </select>
          </div>
        </div>

        <!-- Nascimento -->
        <h4 class="mt-4 fw-bold">Nascimento</h4>
        <div class="row mb-3">
          <div class="col-md-3">
            <label for="birthDate" class="form-label">Data:</label>
            <input
              type="date"
              class="form-control"
              id="birthDate"
              name="birth.date"
            />
          </div>
          <div class="col-md-3">
            <label for="birthCity" class="form-label">Cidade:</label>
            <input
              type="text"
              class="form-control"
              id="birthCity"
              name="birth.city"
            />
          </div>
          <div class="col-md-3">
            <label for="birthState" class="form-label">Estado:</label>
            <input
              type="text"
              class="form-control"
              id="birthState"
              name="birth.state"
            />
          </div>
          <div class="col-md-3">
            <label for="birthCountry" class="form-label">País:</label>
            <input
              type="text"
              class="form-control"
              id="birthCountry"
              name="birth.country"
            />
          </div>
        </div>
      </div>

      <!-- Dados do Memorial -->
      <h3 class="mt-4 fw-bold">Dados do Memorial</h3>
      <div class="border rounded p-4 mb-4 bg-light text-dark">
        <!-- Epitáfio -->
        <div class="mb-3">
          <label for="epitaph" class="form-label">Epitáfio:</label>
          <textarea
            class="form-control"
            id="epitaph"
            name="epitaph"
            rows="2"
            maxlength="255"
          ></textarea>
        </div>

        <!-- Galeria -->
        <h4 class="mt-4 fw-bold">Galeria</h4>
        <div class="mb-3">
          <label for="galleryImage" class="form-label">Foto ou Imagem Principal:</label>
          <input
            type="file"
            class="form-control"
            id="galleryImage"
            name="gallery.image"
            accept="image/*"
          />
        </div>

        <!-- Escolha de Tema -->
        <div class="mb-3">
          <label for="theme" class="form-label">Escolha um tema:</label>
          <select class="form-control" id="theme" name="theme">
            <option value="blue-theme">Tema Azul</option>
            <option value="green-theme">Tema Verde</option>
            <option value="pink-theme">Tema Rosa</option>
          </select>
        </div>
      </div>

      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-light">Criar Memorial</button>
      </div>
    </form>
  </div>
</main>